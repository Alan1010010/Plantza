<div class="cards">
  <% @bookings.each do |booking| %>
    <%= link_to plant_booking_path(booking.plant, booking), class: 'card-wrapper' do %>
      <div class="card clickable">
        <div class="card-img-top">
          <%= cl_image_tag booking.plant.photo, height: 225, width: 300, crop: :fill %>
        </div>
        <div class="card-body">
          <div class="card-info">
            <h5 class="card-title"><%= booking.plant.name %></h5>
            <p class="card-text">Â£<%= booking.plant.price %></p>
          </div>
          <div class="status-container">
            <span class="badge badge-warning"><%= booking.status %></span>
          </div>
          <div class="rating-container">
            <% booking.plant.reviews.average_rating.times do %>
              <i class="fa fa-star"></i>
            <% end %>
            <% (5 - booking.plant.reviews.average_rating).times do %>
              <i class="far fa-star"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

