<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon">
  <div id="nav-left-side">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i id="logo" class="fas fa-seedling"><span class="logo-txt">Plantza</span></i>
    <% end %>
    <form action="/plants" method="get" class="form-inline my-2 my-lg-0">
      <input name="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
    </form>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          Hello, <%= current_user.firstname %>!
        </li>
        <li class="nav-item dropdown">

          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown hover-pointer", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a plant", new_plant_path, class: "dropdown-item" %>
            <%= link_to "My plants", my_plants_path, class: "dropdown-item" %>
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "nav-link" do %>
          Sign up
          <% end %>
        </li>
        <li class="nav-item">
        <%= link_to new_user_session_path, class: "nav-link" do %>
          Log in
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

